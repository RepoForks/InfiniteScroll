<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".Activities.Base.BaseDetailActivity">

    <include layout="@layout/toolbar_back_detail"/>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp" />

    <com.github.glomadrian.loadingballs.BallView
        android:id="@+id/ballViewLoading"
        android:layout_margin="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        lib:balls="5"
        lib:movement_cycle_time="5000"
        lib:enable_size_animation="true"
        lib:size_cycle_time="500"
        lib:min_ball_size="5dp"
        lib:max_ball_size="8dp"
        lib:ball_colors="@array/colors"
        lib:path="star"
        android:layout_gravity="center"
        android:foregroundGravity="center_vertical"
        android:visibility="visible"
        android:layout_centerInParent="true"
        />

</RelativeLayout>